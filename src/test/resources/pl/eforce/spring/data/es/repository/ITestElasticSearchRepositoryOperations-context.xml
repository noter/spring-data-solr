<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:es="http://www.eforce.pl/schema/es"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.eforce.pl/schema/es http://www.eforce.pl/schema/es/spring-es-1.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<es:embedded-es-node id="node"/>
	
	<bean id="elasticSearchTemplate" class="pl.eforce.spring.data.es.core.ElasticSearchTemplate">
		<constructor-arg ref="node" />
	</bean>
	
	<bean class="pl.eforce.spring.data.es.repository.support.ElasticSearchRepositoryFactoryBean">
		<property name="elasticSearchOperations" ref="elasticSearchTemplate"/>
		<property name="repositoryInterface" value="pl.eforce.spring.data.es.repository.ProductRepository"/>
		<property name="namedQueries">
			<bean class="org.springframework.data.repository.core.support.PropertiesBasedNamedQueries">
				<constructor-arg>
					<util:properties location="META-INF/es-named-queries.properties" />
				</constructor-arg>
			</bean>
		</property>
	</bean>
	
</beans>